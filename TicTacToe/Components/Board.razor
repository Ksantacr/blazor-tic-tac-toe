@inject GameState GameStateProvider
@implements IDisposable

<div>
    <div class="status">Next player: @GameStateProvider.symbol @GameStateProvider.turn</div>
    <div class="board-row">
        <Square value="0" />
        <Square value="1" />
        <Square value="2" />
    </div>
    <div class="board-row">
        <Square value="3" />
        <Square value="4" />
        <Square value="5" />
    </div>
    <div class="board-row">
        <Square value="6" />
        <Square value="7" />
        <Square value="8" />
    </div>
</div>


@code {
    protected override void OnInitialized()
    {
        GameStateProvider.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        GameStateProvider.OnChange -= StateHasChanged;
    }
}
